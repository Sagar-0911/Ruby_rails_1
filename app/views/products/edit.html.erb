<h1>Products#edit</h1>
<p>Find me in app/views/products/edit.html.erb</p>
<div class="container">   
  <%= form_for @product, url: { action: :update }, method: :patch do |f| %>   
    <h3>Edit Product</h3>   
    <%= "<div>#{flash[:error]}</div>".html_safe if flash[:error].present? %>
    <p>   
      <div>   
        <label>Product Name</label>   
        <%= f.text_field :name %>   
      </div>   
      <div>   
        <label>Price</label>   
        <%= f.text_field :price %>   
      </div>   
      <div>   
        <label>Description</label>   
        <%= f.text_field :short_description %>   
      </div>   
    </p>   
    <div>   
      <%= link_to 'Back', products_path %>   
      <%= f.submit 'Update Product' %>   
    </div>   
  <% end %>   
</div>
